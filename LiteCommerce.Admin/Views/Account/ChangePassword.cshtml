
@{
    ViewBag.Title = "Change Password";
}

@{
    WebUserData userData = WebUserData.FromCookieString(User.Identity.Name);
}
<form action="~/Account/ChangePassword" method="post">
    <input name="userID" value="@userData.UserID" type="hidden" />
    <span>@Html.ValidationMessage("userID")</span>
    <label>User: <span>@userData.FullName</span></label>
    <div class="form-group">
        <label>Old Password: <span>@Html.ValidationMessage("oldPassword")</span></label>
        <input name="oldPassword" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label>New Password: <span>@Html.ValidationMessage("newPassword") @Html.ValidationMessage("notMatch")</span></label>
        <input name="newPassword" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label>Confirm New Password: <span>@Html.ValidationMessage("confirmPassword") @Html.ValidationMessage("notMatch")</span></label>
        <input name="confirmPassword" type="password" class="form-control" />
    </div>
    <div class="">
        <button type="submit" class="btn btn-sm btn-primary">
            <i class="fa fa-save"></i> Save
        </button>
        <a class="btn btn-sm btn-default" href="~/">
            Cancel
        </a>
    </div>
</form>

